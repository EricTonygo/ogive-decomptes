<div class="ui fluid card right_mini_card_project">
    <div class="content">
        <div class="ui left floated"><div class="header">Vos projets <span class="ui mini label">{{projects|length }}</span></div></div>
        <div class="ui right floated"><a href="{{path('project_add')}}" class="ui yellow mini button">Nouveau projet</a></div>
    </div>
    <div class="content right_mini_card_project_first_content">
        <div class="ui fluid mini input">
            <input type="text" placeholder="Recherche...">
        </div>
        <div class="ui pointing secondary stackable mini menu">
            <a class="item active" data-tab="in-progress">Encours</a>
            <a class="item" data-tab="suspended">Suspendus</a>
            <a class="item" data-tab="closed">Clotur√©s</a>
        </div>
    </div>
    <div class="content right_mini_card_project_second_content">
        <div class="ui tab segment active" data-tab="in-progress">
            <div class="ui relaxed divided list">
                {%if projects %}
                    {%for single_project in projects %}
                        <div class="item">
                            <i class="large caret right middle aligned icon"></i>
                            <div class="content">
                                <a href="{{path('project_gen_infos_get', {'id': single_project.id})}}" class="header">{{single_project.numeroMarche}}</a>
                            </div>
                        </div>
                    {%endfor %}
                {%else %}
                    <div class="item">
                        <div class="center aligned content">
                            <div >No project created at this moment</div>
                        </div>
                    </div>
                {%endif %}
            </div>
        </div>
        <div class="ui tab segment" data-tab="suspended">
        </div>
        <div class="ui tab segment" data-tab="closed">
        </div>
    </div>
    {%if projects | length > 8 %}
        <div class="center aligned content">
            <a class="">Load more...</a>
        </div>
    {%endif %}
</div>