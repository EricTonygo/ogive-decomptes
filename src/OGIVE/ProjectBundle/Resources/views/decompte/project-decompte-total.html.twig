                    {{decompteTask.mtPrevueMarche}}
                </td>
                <td>
                    {{decompteTask.mtPrevueProjetExec}}                                               
                </td>
                <td>
                    {{decompteTask.mtCumulMoisPrec}}
                </td>
                <td>
                    {{decompteTask.mtMois}}                                               
                </td>
                <td>
                    {{decompteTask.mtCumulMois}}
                </td>
                <td>
                    {{decompteTask.pourcentRealisation}}%                                               
                </td>
            </tr>
        {% endif %}
    {% endmacro %}

